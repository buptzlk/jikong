.weui-search-bar {
  width: 100%;
}
.weui-panel {
  width: 100%;
  margin-top: 0;
}
.btn-group {
  align-self: flex-end;
  position: fixed;
  z-index: 100;
  bottom: 20rpx;
  right: 20rpx;
}
button[size=middle] {
  font-size:16px;

}
.weui-media-box {
  display: flex;
}
.weui-media-box__image {
  margin-right: 20rpx;
}
.weui-media-box__image image {
  width: 150rpx;
  height: 150rpx;
  display: block;
}
.weui-media-box-right {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}