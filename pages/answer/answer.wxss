.container {
  background: linear-gradient(to bottom, #5fddb1, #5ddbaf);
  font-size: 36rpx;
  padding: 30rpx;
}

.question-type {
  font-size: 24rpx;
  align-self: flex-start;
  color: #fff;
  padding: 5rpx 20rpx;
  border-radius: 5rpx;
  background: rgba(255, 255, 255, 0.2);
}

.question-desc {
  color: #fff;
  margin: 110rpx 0 70rpx;
}

.choice {
  width: 100%;
}

.choice button {
  background: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
}

.btn-group {
  align-self: flex-end;
}

.btn-group button {
  margin-left: 10rpx;
}

.question-answer {
  align-self: flex-start;
  background: #fff;
  display: block;
  width: 100%;
  padding: 0.5em;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-bottom: 0.5em;
}
