.container {
  min-height: 100%;
  background: #fff;
  font-size: 36rpx;
  padding: 30rpx;
}
.question-box {
  width: 100%;
}
.flex-row {
  display: flex;
  justify-content: space-between;
}
.weui-badge-orange {
  background: orange;
}
.weui-badge-blue {
  background: #9cf;
}
.choice {
  display: block;
  box-sizing: border-box;
  margin-bottom: 1em;
  padding: 0.5em;
  /* border-bottom: 1rpx solid #cacaca; */
  /* border-radius: 1.5em;
  box-shadow: 0 0 5px gray; */
}

.question-type {
  font-size: 24rpx;
  /* align-self: flex-start; */
  padding: 5rpx 20rpx;
  border-radius: 5rpx;
  background: rgba(255, 255, 255, 0.2);
}

.question-desc {
  margin: 110rpx 0 70rpx;
  text-align: center;
}

.choice {
  width: 100%;
}

.choice button {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
}

.btn-group {
  /* align-self: flex-end; */
}

.btn-group button {
  margin-left: 10rpx;
}

.question-answer {
  align-self: flex-start;
  display: block;
  width: 100%;
  padding: 0.5em;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-bottom: 0.5em;
}
textarea {
  border: 1rpx solid #e3e3e3;
  box-sizing: border-box;
  padding: 0.5em;
}
