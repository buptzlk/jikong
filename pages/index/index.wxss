/**index.wxss**/
.container {
  color: #767676;
  font-size: 26rpx;
}
.header {
  width: 100%;
  position: relative;
  text-align: center;
}
.header .title {
  position: absolute;
  top: 50%;
  left: 50%; 
  transform: translate(-50%, -50%);
  color: #fff;
  width: 420rpx;
  padding: 28rpx;
  background: #84bec0;
  font-size: 1.5em;
}
.header .banner {
  display: block;
  width: 100%;
  height: 420rpx;
}
.dashboard {
  margin-top: 2rpx;
  height: 180rpx;
}
.dashboard image {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 10rpx;
}
.flex-row {
  display: flex;
  width: 100%;
  flex-direction: row;
}
.flex-row-space {
  width: 2rpx;
}
.dashboard .flex-row-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.resource-list {
  flex: 1;
  background: #fff;
  padding-top: 20rpx;
  justify-content: space-evenly; 
}
.resource-list .flex-row-item {
  text-align: center;
}
.resource-list .flex-row-item image {
  display: block;
  width: 330rpx;
  height: 236rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 120px;
}