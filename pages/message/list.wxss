/* pages/message/list.wxss */
.container {
  display: block;
}
.weui-media-box {
  background: #fff;
}
.weui-media-box__bd {
  display: flex;
  justify-content: space-between;
}
.weui-media-box__tag {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 200rpx;
  position: relative;
}
.weui-label {
  background: #9cf;
  font-size: 12px;
  color: #fff;
  padding: 0.2em 0.5em;
  border-radius: 5px;
  vertical-align: middle;
  margin-left: 20rpx;
}
.weui-badge_dot {
  position: absolute;
  top: -4px;
}
