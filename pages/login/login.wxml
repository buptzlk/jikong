<view class="container login-form">
  <form catchsubmit="formSubmit">
    <view class="we-input-item">
      <image class="icon" src="/image/user.png"></image>
      <input class="weui-input" name="username" placeholder-class="phcolor" placeholder="请输入姓名" />
    </view>
    <view class="we-input-item">
      <image class="icon" src="/image/tel.png"></image>
      <input class="weui-input" type="number" name="tel" maxlength="11" placeholder-class="phcolor" placeholder="请输入手机号码" bindinput="setTel" />
    </view>
