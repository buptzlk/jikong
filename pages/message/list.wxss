/* pages/message/list.wxss */
.container {
  display: block;
}
.weui-media-box {
  background: #fff;
}
.weui-media-box__bd {
  display: flex;
  justify-content: space-between;
}
.weui-media-box__tag {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  width: 260rpx;
  position: relative;
  color: #999;
  font-size: 12px;
  line-height: 1.5;
  white-space: nowrap;
}
.weui-label {
  background: #9cf;
  font-size: 12px;
  color: #fff;
  padding: 0.2em 0.5em;
  border-radius: 5px;
  vertical-align: middle;
  margin-left: 20rpx;
}
.weui-badge_dot {
  position: absolute;
  top: -4px;
}
