/* common/component/customModal.wxss */

.modal-header {
  background: #fff;
  padding: 20rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  text-align: center;
}

.modal-body {
  background: #fff;
  color: #999;
  padding: 0 20rpx 20rpx;
  font-size: 15px;
}

.modal-footer {
  background: #fff;
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.modal-footer .divid {
  width: 1px;
  height: 100%;
  background: #e5e5e5;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 19rpx 5rpx;
  font-size: 16px;
}

.btn-primary {
  color: #3cc51f;
}

.btn-default {
}
