      <image class="icon" src="/image/tel.png"></image>
      <input class="weui-input" type="number" name="captcha"  placeholder-class="phcolor" placeholder="请输入图形验证码" bindinput="setCaptcha" />
      <image class="weui-vcode-img" src="{{captchaUrl}}" style="width: 108px"></image>
    </view> -->
    <view class="we-input-item">
      <image class="icon" src="/image/verify.png"></image>
      <input class="weui-input" type="number" name="verifyCode" placeholder-class="phcolor" placeholder="请输入验证码" />
      <button class="weui-btn mini-btn warn-btn" type="default" size="mini" bindtap='sendVerifyCode'>发送验证码</button>
    </view>
    <view class="btn-area">
      <button formType="submit">登录校验</button>
    </view>
  </form>
</view>