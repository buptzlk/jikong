<!--pages/my/info-edit.wxml-->
<view class="container">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">头像</view>
      <view class="weui-cell__ft">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover" bindtap="naviAvatar"></image>
      </view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">姓名</view>
      <view class="weui-cell__ft">{{userInfo.name}}</view>
    </view>
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__bd">
        <picker bindchange="bindCompanyChange" value="{{companyIndex}}" range="{{companys}}">
          <view class="weui-select">{{companys[companyIndex]}}</view>
        </picker>
      </view>
    </view>
    <navigator url="set-pro" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">科室</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.department}}</view>
    </navigator>
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__bd">
        <picker bindchange="bindPoliticalChange" value="{{politicalIndex}}" range="{{politicals}}">
          <view class="weui-select">{{politicals[politicalIndex]}}</view>
        </picker>
      </view>
    </view>
  </view>
</view>